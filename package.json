{
  "private": true,
  "name": "Nord-gh",
  "homepage": "https://nordsoftware.github.io/nordgh/",
  "facebook": "NordSoftware",
  "repository": "https://github.com/nordsoftware/nordgh.git",
  "linkedin": "nord-software-ltd",
  "scripts": {
    "lint:js": "eslint --ignore-path .gitignore --fix .",
    "lint": "npm-run-all --parallel lint:*",
    "start": "phenomic start",
    "build": "phenomic build",
    "pretest": "npm run lint",
    "test": "npm run build",
    "predeploy": "npm run build",
    "deploy": "./scripts/deploy.sh"
  },
  "phenomic": {
    "CNAME": true
  },
  "babel": {
    "presets": [
      "babel-preset-react",
      "babel-preset-es2015",
      "babel-preset-stage-1"
    ],
    "env": {
      "production": {
        "presets": [
          "babel-preset-react-optimize"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint-config-i-am-meticulous/react"
    ],
    "rules": {
      "react/prefer-stateless-function": 0,
      "react/jsx-no-bind" : 0
    }
  },
  "eslintConfigRuleReact/prefer-stateless-function": "https://github.com/MoOx/phenomic/issues/46",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^6.0.0-beta.0",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-1": "^6.3.13",
    "bootstrap-loader": "^1.2.0-beta.1",
    "bootstrap-sass": "^3.3.7",
    "css-loader": "^0.23.1",
    "eslint": "^2.0.0",
    "eslint-config-i-am-meticulous": "^4.1.1",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.1",
    "history": "^2.0.0",
    "invariant": "^2.1.1",
    "jquery": "^3.1.0",
    "json-loader": "^0.5.2",
    "node-sass": "^3.8.0",
    "npm-run-all": "^1.7.0",
    "phenomic": "^0.16.2",
    "postcss-browser-reporter": "^0.4.0",
    "postcss-cssnext": "^2.4.0",
    "postcss-loader": "^0.7.0",
    "postcss-reporter": "^1.3.0",
    "raw-loader": "^0.5.1",
    "react": "^0.14.0 || ^15.0.0-rc.1",
    "react-dom": "^0.14.0 || ^15.0.0-rc.1",
    "react-helmet": "^3.0.0",
    "react-redux": "^4.0.0",
    "react-router": "^2.3.0",
    "react-svg-inline": "^1.2.0",
    "react-topbar-progress-indicator": "^1.0.0",
    "redux": "^3.0.0",
    "resolve-url-loader": "^1.6.0",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.12.4",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.1",
    "whatwg-fetch": "^0.11.0"
  },
  "dependencies": {
    "imports-loader": "^0.6.5",
    "react-search-input": "^0.10.3"
  }
}
